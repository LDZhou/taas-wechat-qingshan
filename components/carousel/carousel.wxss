/* components/carousel/carousel.wxss */

.carousel-container{
  height: 1000rpx;
  position: relative;
  margin-top: 98rpx;

}

.swiper-photos{
  width: 100%;
  height: 100%;
}

.photo{
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  transition: all 0.5s;
  box-shadow: 0 8rpx 10rpx 4rpx rgba(0,0,0,0.2);
}

.swiper-item{
  box-sizing: border-box;
  padding: 20rpx 18rpx;
}

.swiper-hide-item > image {
  height: calc(100% - 48rpx);
  margin-top: 24rpx;
}

.swiper-item-btn{
  margin: 180rpx 30rpx 0 30rpx;
  height: 75rpx;
  background-color: rgb(100,215,201);
  text-align: center;
  line-height: 75rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: normal;
  position: absolute;
  bottom: 66rpx;
  left: 37rpx;
  border-radius: 36rpx;
  padding: 0 67rpx;
}

.indicator-contaner{
  display: flex;
  justify-content: center;
  margin-top: 60rpx;
}

.indicator-item{
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  margin: 0 12rpx 0 12rpx;
  background: rgb(222,222,222);
}

.indicator-contaner > .selected{
  background: rgb(100,215,201);
}