/* components/carousel/carousel.wxss */

.carousel-container{
  height: 620rpx;
  position: relative;
  margin-top: 30rpx;

}

.swiper-photos{
  width: 100%;
  height: 100%;
}

.photo{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.swiper-item{
  box-sizing: border-box;
  padding: 0 10rpx;
}

.swiper-item-btn{
  margin: 180rpx 30rpx 0 30rpx;
  height: 80rpx;
  background-color: #d8d8d8;
  text-align: center;
  line-height: 80rpx;
  color: #2c2e3b;
  font-size: 28rpx;
  margin-top: 70rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

.indicator-contaner{
  display: flex;
  justify-content: center;
  position: absolute;
  bottom: 10rpx;
  left: 0;
  right: 0;
  z-index: 100;
}

.indicator-item{
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin: 0 8rpx 0 8rpx;
  background: #fff;
}

.indicator-contaner > .selected{
  background: rgb(4,204,196);
}