/* components/model/model.wxss */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.7;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/* 弹框 */
.modal-dialog{
  font-size: 30rpx;
  width:calc(100% - 90rpx);
  position: fixed;
  top: 16%;
  left:45rpx;
  margin:auto;
  z-index: 1500;
  background: #fff;
  box-sizing: border-box;
  border-radius: 6rpx;
  padding: 50rpx;
}

.close-icon{
  position: absolute;
  width: 28.96rpx;
  height: 28.96rpx;
  top: 25.34rpx;
  right: 25.34rpx;
}

.tip-icon{
  height: 230rpx;
  margin: 150rpx auto 0 auto;
  display: block;
}

.m-title {
  margin-top: 100rpx;
  font-size: 36rpx;
  font-weight: 600;
  color: rgb(51,51,51);
  text-align: center;
}

.m-info{
  font-size: 24rpx;
  text-align: center;
  color: rgb(153,153,153);
  word-break: break-word;
  margin-top: 15rpx;
}

.modal-footer-btn{
  width: 100%;
  margin: 0 auto;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 36rpx;
  margin-top: 56rpx;
  border-radius: 53rpx;
  color: #fff;
  background: rgb(100,215,201);
}