/* pages/solution/retrospect/retrospect.wxss */

/* mask */
.mask-container{
  position: fixed;
  left: 0;
  top: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0,0,0,0.8);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mask-wrap{
  display: flex;
  flex-direction: column;
  width: 640rpx;
  height: 1120rpx;
}

.share-image{
  width: 100%;
  height: 1000rpx;
}

.mask-wrap > .save-share-img-btn{
  margin: 0;
  margin-top: auto;
}

.show-img{
  width: 100%;
}

/* components/carousel/carousel.wxss */

.carousel-container{
  position: relative;
  height: 640rpx;
  margin-top: 37rpx;
  letter-spacing: 0;
}

.swiper-photos{
  width: 100%;
  height: 100%;
}

.photo{
  width: 194rpx;
  height: 201rpx;
  display: block;
  margin: 38rpx auto;
}

.swiper-item{
  box-sizing: border-box;
  padding: 0 20rpx;
  padding-bottom: 40rpx;
}

.swiper-item-wrap{
  padding: 40rpx 30rpx;
  height: calc(100% - 20rpx);
  margin-top: 10rpx;
  box-shadow: 0 16rpx 26rpx 0 rgba(0,0,0,0.2);
}

.swiper-header-content{
  padding: 40rpx 30rpx 30rpx 30rpx;
  background-color: rgb(134,230,228);
  border-radius: 6rpx;
  display: flex;
  align-items: flex-end;
  height: 160rpx;
}

.swiper-header-content > text:nth-child(2) {
  font-size: 96rpx;
  font-weight: bold;
  transform: translateY(22rpx);
  margin: 0 8rpx;
}

.swiper-header-content > text:first-child {
  font-size: 32rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.swiper-header-content > text:last-child {
  font-size: 32rpx;
  font-weight: 500;
}

.swiper-footer{
  text-align: center;
}


.swiper-footer > text:nth-child(2) {
  font-size: 44rpx;
  font-weight: bold;
}

.swiper-footer > text:first-child {
  font-size: 26rpx;
  font-weight: 500;
}

.swiper-footer > text:last-child {
  font-size: 26rpx;
  font-weight: 500;
}

.indicator-contaner{
  display: flex;
  justify-content: center;
  margin-top: 10rpx;
}

.indicator-item{
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  margin: 0 12rpx 0 12rpx;
  background: rgb(222,222,222);
}

.indicator-contaner > .selected{
  background: rgb(100,215,201);
}

/* products */

.environment-icon{
  width: 200rpx;
  height: 70rpx;
  display: block;
  margin: 193rpx auto 37rpx auto;
}

.products-wrap{
  padding-left: 74rpx;
  position: relative;
}

.products-wrap::before{
  content: '';
  display: inline-block;
  position: absolute;
  height: calc(100% - 60rpx);
  border-left: 2rpx dotted rgb(164,164,164);
  top: 60rpx;
  left: 64rpx;
}

.product-container{
  width: calc(100% - 84rpx);
  margin: 34rpx auto 0 auto;
  box-shadow: 0 4rpx 8rpx 0 rgba(0,0,0,0.07);
  position: relative;
}

.product-container::before{
  content: '';
  display: inline-block;
  position: absolute;
  height: 40rpx;
  width: 40rpx;
  background: rgb(162,162,162);
  border-radius: 50%;
  top: 60rpx;
  left: -70rpx;
  transition: all 0.2s;
}

.product-active::before{
  width: 46rpx;
  height: 46rpx;
  background: rgb(100,215,201);
  left: -78rpx;
  border: 5rpx solid rgb(211,211,211);
}

.product-wrap{
  position: relative;
}

.product-header-container{
  width: 100%;
  height: 452rpx;
  position: relative;  
}

.cover-photo{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.time-bg{
  width: 380rpx;
  height: 72rpx;
  position: absolute;
  top: 50rpx;
  left: -24rpx;
  z-index: 10;
}

.header-date-wrap{
}

.header-time{
  font-size: 40rpx;
  font-weight: 600;
  z-index: 20;
  position: absolute;
  top: 58rpx;
  left: 26rpx;
  letter-spacing: 0;
}

.content-container{
  padding: 36rpx 56rpx;
  background: #fff;
  position: relative;
  display: flex;
  align-items: center;
 
}

.content-container > text:first-child{
  font-size: 25rpx;
  width: 120rpx;
  flex-shrink: 0;
  font-weight: 600;
}

.content-wrap{
  margin-left: 40rpx;
}

.content-des{
  font-size: 30rpx;
}

.content-row{
  color: rgb(102,102,102);
  font-size: 22rpx;
  margin-top: 4rpx;
}

.content-row > text{
  margin-left: 10rpx;
}

.row-icon{
  width: 20rpx;
  height: 20rpx;
}

/*  */

.output{
  font-size: 44rpx;
  text-align: center;
  margin-top: 82rpx;
  font-weight: 600;
}

/* brand */

.record-container{
  padding: 38rpx 38rpx 38rpx 80rpx;
}

.record-info{
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  letter-spacing: 0;
}

.record-row-wrap:not(:first-child){
  margin-left: 44rpx;
}

.record-title{
  font-size: 26rpx;
  font-weight: bold;
  position: relative;
}

.record-title::before{
  content: '';
  display: inline-block;
  width: 14rpx;
  height: 14rpx;
  position: absolute;
  left: -24rpx;
  top: 10rpx;
  background-color: rgb(3,194,192);
  border-radius: 50%;
}

.record-des{
  margin-top: 4rpx;
  font-size: 22rpx;
  color: rgb(102,102,102);
}

.dashed{
  border-bottom: 2rpx dashed #fff;
}

.footer-container{
  padding: 70rpx 30rpx 80rpx;
  background-color: #fff;
  margin-top: 80rpx;
}

.share-btn{
  width: 100%;
  height: 106rpx;
  background-color: rgb(100,215,201);
  text-align: center;
  line-height: 106rpx;
  color: #fff;
  font-size: 40rpx;
  border-radius: 66rpx;
}