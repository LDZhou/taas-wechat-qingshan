/* pages/solution/solution.wxss */

.container{
  display: flex;
  flex-direction: column;
}

.row{
  height: calc(100vh / 3);
  width: 100%;
  color: #fefefe;
  position: relative;
}

.solution-bg{
  position: absolute;
  z-index: -1;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
}

.row > .wrap{
  position: absolute;
  bottom: 82rpx;
  left: 0;
  right: 0;
  text-align: center;
}

.wrap > text:first-child{
  font-size: 40rpx;
}

.wrap > text:last-child{
  font-size: 72rpx;
  margin-left: 6rpx;
}

.submit-btn{
  margin: 180rpx 30rpx 0 30rpx;
  height: 80rpx;
  background-color: #d8d8d8;
  text-align: center;
  line-height: 80rpx;
  color: #2c2e3b;
  font-size: 28rpx;
  margin-top: 70rpx;
}