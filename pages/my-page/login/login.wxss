/* pages/my-page/login/login.wxss */

.login-card{
  width: calc(100% - 120rpx);
  height: 640rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.login-icon{
  width: 430rpx;
  display: block;
  margin: 140rpx auto;
}

.intro-content-title{
  font-size: 36rpx;
  text-align: center;
  padding-bottom: 20rpx;
  /* padding: 0 54rpx; */
}

.intro-content{
  font-size: 32rpx;
  text-align: center;
  /* padding: 0 54rpx; */
}

.login-btn{
  height: 90rpx;
  line-height: 90rpx;
  background: rgb(100,215,201);
  border-radius: 53rpx;
  color: #fff;
  font-size: 36rpx;
  padding: 0;
  font-weight: unset;
  margin-top: 70rpx;
}

.login-btn:not([size='mini']){
  width: 100%;
}