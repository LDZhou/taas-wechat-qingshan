/* user info */
.user-info-container{
  padding: 77rpx 35rpx 0 35rpx;
  margin-top: 138rpx;
  background: #fff;
  border-radius: 6rpx;
  position: relative;
  width: calc(100% - 80rpx);
  margin-left: 40rpx;
}

.head-img{
  width: 124rpx;
  height: 124rpx;
  border-radius: 50%;
  background: #dcdddd;
  position: absolute;
  top: 0;
  left: 50%;
  margin-left: -62rpx;
  margin-top: -62rpx;
}

.user-name{
  font-size: 38rpx;
  text-align: center;
}

.no-login{
  background: #dcdddd;
  margin: 0 auto;
}

.login-btn{
  box-sizing: border-box;
  border: 2rpx solid;
  width: 200rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 500;
  border-color: #dcdddd;
  margin: 0 auto;
  margin-top: 30rpx;
}

