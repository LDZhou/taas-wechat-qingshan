.brand-content-container{
  margin-top: 72rpx;
  display: flex;
  align-items: center;
}

.content-wrap{
  display: flex;
  flex-direction: column;
}

.brand-content-container > .content-wrap:nth-child(1){
  width: 160rpx;
  flex-shrink: 0;
}

.brand-content-container > .content-wrap:nth-child(2){
  flex-grow: 1;
}

.brand-content-container > .content-wrap:nth-child(3){
  width: 190rpx;
  flex-shrink: 0;
}

.content-wrap > text:first-child{
  color: #88839b;
  font-size: 24rpx;
}

.content-wrap > text:last-child{
  color: #dcdddd;
  font-size: 68rpx;
  font-weight: bold;
}


/* form */

.row-container{
  height: 100rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
}

.row-title{
  flex-shrink: 0;
  width: 64rpx;
  font-size: 30rpx;
}

.row-input{
  margin-left: 40rpx;
  flex-grow: 1;
  font-size: 24rpx;
  color: #88839b;
}

.picker{
  height: 100rpx;
  line-height: 100rpx;
}

.right-icon{
  width: 40rpx;
  height: 40rpx;
  flex-shrink: 0;
}