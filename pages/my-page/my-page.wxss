/* form */

.row-container{
  height: 120rpx;
  display: flex;
  align-items: center;
}

.row-container ~ .row-container{
  border-top: 2rpx solid rgb(239,239,244);
}

.row-title{
  flex-shrink: 0;
  width: 64rpx;
  font-size: 28rpx;
}

.row-input{
  margin-left: 20rpx;
  flex-grow: 1;
  font-size: 28rpx;
  color: rgb(153,153,153);
}

.picker{
  height: 100rpx;
  line-height: 100rpx;
}

.right-icon{
  width: 14rpx;
  height: 24rpx;
  flex-shrink: 0;
}

.mine-bg{
  width: calc(100% - 80rpx);
  margin-top: 226rpx;
  margin-left: 40rpx;
}