/* user info */
.user-info-container{
  text-align: center;
  padding: 112rpx 44rpx 0 44rpx;
  margin-bottom: 60rpx;
}

.head-img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #dcdddd;
}

.user-name{
  color: #dcdddd;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.no-login{
  background: #dcdddd;
  margin: 0 auto;
}

.login-btn{
  box-sizing: border-box;
  border: 2rpx solid;
  width: 200rpx;
  height: 60rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 500;
  border-color: #dcdddd;
  margin: 0 auto;
  margin-top: 30rpx;
}

/* brand info */

.brand-info-container{
  margin: 50rpx 30rpx 0 30rpx;
  /* height: 280rpx; */
  background: #19181d;
  padding: 36rpx 36rpx 28rpx 36rpx;
}

.brand-info-title{
  position: relative;
  font-size: 40rpx;
  color: #dcdddd;
}

